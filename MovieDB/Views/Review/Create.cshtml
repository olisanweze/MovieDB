<form action="Create" method="post">
    <div>
        <label asp-for="SelectedMovieId">
            Movies
        </label>
        <select asp-items="Model?.Movies" asp-for="SelectedMovieId">
            <option value="">Select a movie</option>
        </select>
    </div>
    <div>
        <label asp-for="Star">
            Star
        </label>
        <input asp-for="Star" type="range" name="star" min="0" max="5" />
    </div>
    <div>
        <label asp-for="Comment">Comment</label>
        <textarea asp-for="Comment" maxlength="250" cols="10" rows="10"></textarea>
    </div>
    <button type="submit">Add review</button>
</form>
