<h2>Create Review</h2>

@if (Model?.Movies == null)
{
    <p>No movies available.</p>
}

@if (Model?.Comment == null)
{
    <p>No Comment available.</p>
}

@if (Model?.Star == null)
{
    <p>No Star available.</p>
}


