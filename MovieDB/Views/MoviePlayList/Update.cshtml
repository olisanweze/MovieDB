@model MovieDB.Models.MoviePlayList

@{
    ViewData["Title"] = "Update Movie Playlist";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.PlayListId)
    @Html.HiddenFor(m => m.MovieId)

    <div>
        @Html.LabelFor(m => m.MovieName)
        @Html.TextBoxFor(m => m.MovieName)
        @Html.ValidationMessageFor(m => m.MovieName, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
}
